<Page
    x:Class="pratice.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:pratice"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:data="using:pratice.Models"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Product:" VerticalAlignment="Center" Margin="10"/>
            <TextBox Grid.Column="1" Name="FirstNameTextBox" Margin="10"/>

            <TextBlock Text="Description:" Grid.Row="1" Name="LastName" VerticalAlignment="Center" Margin="10"/>
            <TextBox Grid.Row="1" Grid.Column="1" Name="LastNameTextBox" Margin="10"/>

            <TextBlock Grid.Row="2" Text="Avatar:" VerticalAlignment="Center" Margin="10"/>
            <ComboBox Name="Images" Height="50" Width="100" Grid.Row="2"
                      Grid.Column="1" ItemsSource="{x:Bind Icons}" Margin="10">
                <ComboBox.ItemTemplate>
                    <DataTemplate x:DataType="data:IconSS">
                        <Image Source="{Binding iconPath}" Width="40" Height="40"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button Grid.Row="3" Grid.Column="1" Name="Order"
                    Click="NewContactButton_Click" Content="Add" Margin="10"/>
        </Grid>
        <GridView Grid.Column="3" ItemsSource="{x:Bind Contacts}" Margin="20" Grid.Row="4">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="data:Contact">
                    <local:MyUserControl1
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"/>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>
